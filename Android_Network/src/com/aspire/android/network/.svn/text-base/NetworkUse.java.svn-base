package com.aspire.android.network;

/**
 * The class <code>NetworkUse</code>
 * 
 * @author ouyangfeng
 * @version 1.0
 */
public interface NetworkUse {

    /**
     * 取得发送出去的流量
     * 
     * @return 单位字节
     */
    public long getTxBytes();

    /**
     * 取得接收的流量
     * 
     * @return 单位字节
     */
    public long getRxBytes();

    /**
     * 取得总流量
     * 
     * @return 单位字节
     */
    public long getTotalBytes();

}
