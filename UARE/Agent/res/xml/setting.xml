<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:summary="Flight Search Preferences"
        android:title="参数设置" >
        <EditTextPreference
            android:defaultValue="10.0.0.1"
            android:dialogTitle="服务器IP"
            android:key="server_ip"
            android:summary="上传截图服务器IP"
            android:title="服务器IP" />
        <EditTextPreference
            android:defaultValue="8080"
            android:dialogTitle="服务器端口"
            android:key="server_port"
            android:summary="上传截图服务器端口"
            android:title="服务器端口" />
        <EditTextPreference
            android:defaultValue="1"
            android:dialogTitle="截图频率(分/次)"
            android:key="rate"
            android:summary="截图频率(分/次)"
            android:title="截图频率(分/次)" />
    </PreferenceCategory>

</PreferenceScreen>